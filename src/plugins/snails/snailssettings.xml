<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label value="Appearance" />
		<tab>
			<label value="Message viewer" />
			<groupbox>
				<label value="Fonts" />
				<item type="customwidget" name="FontsSelector" />
			</groupbox>
		</tab>
		<tab>
			<label value="Mail list" />
			<item type="spinbox" property="MessageListPadding" min="0" max="100" default="2">
				<label value="Padding between messages" />
				<suffix value=" px" />
			</item>
			<item type="combobox" property="MessageActionsHintsStyle">
				<label value="Message actions hints style:" />
				<option name="Icon" default="true">
					<label value="icons" />
				</option>
				<option name="Ball">
					<label value="balls" />
				</option>
			</item>
		</tab>
	</page>
	<page>
		<label value="Behavior" />
		<groupbox>
			<label value="Mail list sorting" />
			<item type="checkbox" property="RootsRespectRead" default="true">
				<label value="Consider read status when sorting threads roots" />
			</item>
			<item type="checkbox" property="RootsRespectReadChildren" default="true">
				<label value="Consider read status of children as well" />
			</item>
		</groupbox>
		<groupbox>
			<label value="Messages fetching" />
			<item type="combobox" property="FetchMessagesPolicy">
				<label value="Messages contents fetching policy:" />
				<option name="JustMessage" default="true">
					<label value="fetch just the message when it is selected" />
				</option>
				<option name="MessageAndChildren">
					<label value="fetch the message and its children when it is selected" />
				</option>
			</item>
		</groupbox>
		<groupbox>
			<label value="Editor" />
			<item type="combobox" property="ReplyMessageFormat">
				<label value="Default format of a reply:" />
				<option name="Orig" default="true">
					<label value="As original message" />
				</option>
				<option name="Plain">
					<label value="Plain text" />
				</option>
				<option name="HTML">
					<label value="HTML" />
				</option>
			</item>
		</groupbox>
	</page>
	<page>
		<label value="Accounts" />
		<item type="customwidget" name="AccountsWidget" />
	</page>
	<page>
		<label value="Templates" />
		<item type="customwidget" name="TemplatesWidget" />
	</page>
</settings>
