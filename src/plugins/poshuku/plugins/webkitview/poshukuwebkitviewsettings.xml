<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label value="Poshuku WebKitView" />
		<tab>
			<label value="General" />
			<item type="checkbox" property="AllowJava" default="true">
				<label value="Allow Java" />
			</item>
			<item type="checkbox" property="OfflineStorageDB" default="true">
				<label value="Offline storage database" />
			</item>
			<item type="checkbox" property="OfflineWebApplicationCache" default="true">
				<label value="Offline web application cache" />
			</item>
			<item type="checkbox" property="EnableNotifications" default="true">
				<label value="Enable HTML5 notifications" />
			</item>
			<item type="checkbox" property="DeveloperExtrasEnabled" default="false">
				<label value="Developer extras" />
			</item>
			<item type="checkbox" property="FixNonWhitePalettes" default="true">
				<label value="Fix palettes with non-white background" />
			</item>
			<item type="lineedit" property="UserStyleSheet">
				<label value="User CSS URL:" />
			</item>
		</tab>
		<tab>
			<label value="Rendering" />
			<groupbox>
				<label value="Rendering" />
				<item type="checkbox" property="PrimitivesAntialiasing" default="off">
					<label value="Antialias primitives if possible" />
				</item>
				<item type="checkbox" property="TextAntialiasing" default="on">
					<label value="Antialias text if possible" />
				</item>
				<item type="checkbox" property="SmoothPixmapTransform" default="on">
					<label value="Smooth pixmap transform" />
				</item>
			</groupbox>
		</tab>
		<tab>
			<label value="Security" />
			<item type="checkbox" property="StoreLocalLinkHistory" default="true">
				<label value="Store local link history" />
			</item>
		</tab>
		<tab>
			<label value="Cache" />
			<groupbox>
				<label value="Offline storage" />
				<item type="spinbox" property="OfflineStorageQuota" default="128" minimum="0" maximum="1048576">
					<label value="Offline storage default quota:" />
					<suffix value=" KB" />
				</item>
				<item type="pushbutton" property="ClearIconDatabase">
					<label lang="en" value="Clear favicon database" />
				</item>
			</groupbox>
			<groupbox>
				<label value="In-memory" />
				<item type="checkbox" property="DNSPrefetchEnabled" default="on">
					<label value="Prefetch DNS entries" />
				</item>
				<item type="spinbox" property="MaximumPagesInCache" default="15" minimum="5" maximum="1000" step="5">
					<label value="Maximum pages:" />
				</item>
				<item type="doublespinbox" property="MinDeadCapacity" minimum="0" maximum="2048" step="8" default="1" precision="1">
					<label value="Minimum dead capacity:" />
					<suffix value=" MB" />
				</item>
				<item type="doublespinbox" property="MaxDeadCapacity" minimum="0" maximum="2048" step="8" default="32" precision="1">
					<label value="Maximum dead capacity:" />
					<suffix value=" MB" />
				</item>
				<item type="doublespinbox" property="TotalCapacity" minimum="0" maximum="2048" step="8" default="64" precision="1">
					<label value="Total capacity:" />
					<suffix value=" MB" />
				</item>
				<item type="pushbutton" property="ClearMemoryCaches">
					<label value="Clear in-memory caches" />
				</item>
			</groupbox>
		</tab>
	</page>
</settings>
