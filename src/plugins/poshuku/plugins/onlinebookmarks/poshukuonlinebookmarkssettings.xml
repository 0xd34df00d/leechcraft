<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label value="OnlineBookmarks" />
			<label value="Accounts" />
		<item type="customwidget" name="Accounts" />
		<item type="combobox" property="UploadType">
			<label value="Bookmarks sync mode:"/>
			<option name="0" default="true">
				<label value="everything with everything" />
			</option>
			<option name="1">
				<label value="only accounts" />
			</option>
			<option name="2">
				<label value="only services" />
			</option>
		</item>
		<item type="groupbox" property="DownloadGroup" checkable="true" default="false">
			<label value="Download options" />
			<item type="combobox" property="DownloadPeriod">
				<label value="Send bookmarks to selected services every"/>
				<option name="1" >
					<label value="15 minutes" />
				</option>
				<option name="2" >
					<label value="30 minutes" />
				</option>
				<option name="4" >
					<label value="hour" />
				</option>
				<option name="8">
					<label value="2 hours" />
				</option>
				<option name="16">
					<label value="4 hours" />
				</option>
				<option name="32" default="true">
					<label value="8 hours" />
				</option>
				<option name="48">
					<label value="12 hours" />
				</option>
				<option name="96">
					<label value="day" />
				</option>
				<option name="672">
					<label value="week" />
				</option>
				<option name="2880">
					<label value="month" />
				</option>
			</item>
		</item>
		<item type="groupbox" property="UploadGroup" checkable="true" default="false">
			<label value="Upload options" />
			<item type="combobox" property="UploadPeriod" >
				<label value="Send bookmarks to selected services every"/>
				<option name="1" >
					<label value="15 minutes" />
				</option>
				<option name="2" >
					<label value="30 minutes" />
				</option>
				<option name="4" >
					<label value="hour" />
				</option>
				<option name="8">
					<label value="2 hours" />
				</option>
				<option name="16">
					<label value="4 hours" />
				</option>
				<option name="32" default="true">
					<label value="8 hours" />
				</option>
				<option name="48">
					<label value="12 hours" />
				</option>
				<option name="96">
					<label value="day" />
				</option>
				<option name="672">
					<label value="week" />
				</option>
				<option name="2880">
					<label value="month" />
				</option>
			</item>
		</item>
	</page>
</settings>
