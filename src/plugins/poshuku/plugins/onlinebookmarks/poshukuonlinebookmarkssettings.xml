<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label value="OnlineBookmarks" />
		<tab>
			<label value="Accounts" />
			<item type="customwidget" label="own" name="Accounts" />
		</tab>
		<tab>
			<label value="Sync options" />
			<item type="customwidget" label="own" name="QuickUpload" />
			<item type="checkbox" property="ConfirmSend" state="off">
				<label value="Confirm sending bookmarks on addition" />
			</item>
			<item type="checkbox" property="ShowServices" state="off">
				<label value="Ask about services to send bookmarks to" />
			</item>
			<item type="combobox" property="UploadType">
				<label value="Upload bookmarks type:"/>
				<option name="0" default="true">
					<label value="everything with everything" />
				</option>
				<option name="1">
					<label value="only accounts" />
				</option>
				<option name="2">
					<label value="only services" />
				</option>
			</item>
			<item type="groupbox" property="DownloadGroup" checkable="true" state="off">
				<label value="Download options" />
				<item type="combobox" property="DownloadPeriod">
					<label value="Send bookmarks to selected services every"/>
					<option name="1" >
						<label value="hour" />
					</option>
					<option name="2">
						<label value="2 hour" />
					</option>
					<option name="4">
						<label value="4 hour" />
					</option>
					<option name="8" default="true">
						<label value="8 hour" />
					</option>
					<option name="12">
						<label value="12 hour" />
					</option>
					<option name="24">
						<label value="day" />
					</option>
					<option name="168">
						<label value="week" />
					</option>
					<option name="720">
						<label value="month" />
					</option>
				</item>
			</item>
			<item type="groupbox" property="UploadGroup" checkable="true" state="off">
				<label value="Upload options" />
				<item type="combobox" property="UploadPeriod" >
					<label value="Send bookmarks to selected services every"/>
					<option name="1" >
						<label value="hour" />
					</option>
					<option name="2">
						<label value="2 hour" />
					</option>
					<option name="4">
						<label value="4 hour" />
					</option>
					<option name="8" default="true">
						<label value="8 hour" />
					</option>
					<option name="12">
						<label value="12 hour" />
					</option>
					<option name="24">
						<label value="day" />
					</option>
					<option name="168">
						<label value="week" />
					</option>
					<option name="720">
						<label value="month" />
					</option>
				</item>
			</item>
		</tab>
	</page>
</settings>
