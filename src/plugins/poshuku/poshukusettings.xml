<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label lang="en" value="Browser settings" />
		<tab>
			<label lang="en" value="Behavior" />
			<item type="checkbox" property="RestorePreviousSession" state="on">
				<label lang="en" value="Restore previous session" />
			</item>
			<item type="checkbox" property="StartWithHomeTab" state="off">
				<label lang="en" value="Always open home tab" />
			</item>
			<item type="checkbox" property="BackgroundNewTabs" state="on">
				<label lang="en" value="Open new tabs in the background" />
			</item>
			<item type="checkbox" property="GroupBookmarksByTags" state="on">
				<label lang="en" value="Group bookmarks by tags" />
			</item>
			<item type="checkbox" property="ParanoidDownloadsDetection" state="off">
				<label lang="en" value="Paranoid downloads detection" />
			</item>
			<item type="checkbox" property="DifferLocationsByExtension" state="on">
				<label lang="en" value="Differ download locations by file extension" />
			</item>
			<item type="checkbox" property="UseSummaryForSearches" default="false">
				<label value="Use Summary for displaying search results" />
			</item>
			<item type="checkbox" property="TryToDetectRSSLinks" state="on">
				<label lang="en" value="Try to detect links to RSS/Atom feeds" />
			</item>
			<item type="checkbox" property="GenerateTooltips" state="on">
				<label lang="en" value="Generate tooltips" />
			</item>
			<item type="checkbox" property="NotifyFinishedByDefault" state="off">
				<label lang="en" value="Notify about finished loads by default" />
			</item>
			<item type="checkbox" property="CloseEmptyDelegatedPages" default="on">
				<label lang="en" value="Automatically close empty pages with delegated content" />
			</item>
			<item type="checkbox" property="BookmarkInOneClick" default="off">
				<label lang="en" value="Add bookmark in one click" />
			</item>
			<item type="lineedit" property="ExternalSchemes" default="smb nfs telnet imap pop nntp news">
				<label lang="en" value="Open these schemes using external applications:" />
			</item>
			<item type="lineedit" property="UserStyleSheet">
				<label lang="en" value="User CSS URL:" />
			</item>
		</tab>
		<tab>
			<label lang="en" value="Security" />
			<groupbox>
				<label lang="en" value="Security" />
				<item type="checkbox" property="EnableXSSAuditing" default="false">
					<label value="Enable XSS auditing" />
					<tooltip>Specifies whether requests should be monitored for cross-site scripting attempts. Suspicious attempts would be blocked. This feature may have a slight negative impact on performance.</tooltip>
				</item>
				<item type="checkbox" property="EnableHyperlinkAuditing" default="false">
					<label value="Enable hyperlink auditing" />
					<tooltip>Enable sending hyperlink auditing pings.</tooltip>
				</item>
				<item type="checkbox" property="OfflineStorageDB" state="on">
					<label lang="en" value="Offline storage database" />
				</item>
				<item type="checkbox" property="OfflineWebApplicationCache" state="on">
					<label lang="en" value="Offline web application cache" />
				</item>
				<item type="checkbox" property="LocalStorageDB" state="on">
					<label lang="en" value="Local storage database" />
				</item>
				<item type="checkbox" property="StoreLocalLinkHistory" state="on">
					<label lang="en" value="Store local link history" />
				</item>
				<item type="spinbox" property="HistoryClearOlderThan" minimum="0" maximum="10000" default="30">
					<label value="Clear history items older than:" />
					<suffix value=" days" />
				</item>
				<item type="spinbox" property="HistoryKeepLessThan" minimum="0" maximum="100000" default="20000">
					<label value="Keep less than: " />
					<suffix value=" items" />
				</item>
				<item type="pushbutton" name="CookiesEdit">
					<label lang="en" value="Cookies..." />
				</item>
				<item type="pushbutton" name="ClearIconDatabase">
					<label lang="en" value="Clear favicon database" />
				</item>
			</groupbox>
		</tab>
		<tab>
			<label lang="en" value="Cache" />
			<groupbox>
				<label lang="en" value="Offline storage" />
				<item type="spinbox" property="OfflineStorageQuota" default="128" minimum="0" maximum="1048576">
					<label value="Offline storage default quota:" />
					<suffix value=" KB" />
				</item>
			</groupbox>
			<groupbox>
				<label lang="en" value="In-memory" />
				<item type="checkbox" property="DNSPrefetchEnabled" default="on">
					<label lang="en" value="Prefetch DNS entries" />
				</item>
				<item type="spinbox" property="MaximumPagesInCache" default="15" minimum="5" maximum="1000" step="5">
					<label lang="en" value="Maximum pages:" />
				</item>
				<item type="doublespinbox" property="MinDeadCapacity" minimum="0" maximum="2048" step="8" default="1" precision="1">
					<label value="Minimum dead capacity:" />
					<suffix value=" MB" />
				</item>
				<item type="doublespinbox" property="MaxDeadCapacity" minimum="0" maximum="2048" step="8" default="32" precision="1">
					<label value="Maximum dead capacity:" />
					<suffix value=" MB" />
				</item>
				<item type="doublespinbox" property="TotalCapacity" minimum="0" maximum="2048" step="8" default="64" precision="1">
					<label value="Total capacity:" />
					<suffix value=" MB" />
				</item>
				<item type="pushbutton" name="ClearMemoryCaches">
					<label lang="en" value="Clear in-memory caches" />
				</item>
			</groupbox>
		</tab>
		<tab>
			<label lang="en" value="Storage" />
			<item type="customwidget" label="own" name="BackendSelector" />
		</tab>
	</page>
	<page>
		<label lang="en" value="Viewer settings" />
		<tab>
			<label lang="en" value="Dynamic content" />
			<groupbox>
				<label lang="en" value="Dynamic content" />
				<item type="checkbox" property="AutoLoadImages" state="on">
					<label lang="en" value="Load images automatically" />
				</item>
				<item type="checkbox" property="AllowJavascript" state="on">
					<label lang="en" value="Allow Javascript" />
				</item>
				<item type="checkbox" property="AllowJava" state="on">
					<label lang="en" value="Allow Java" />
				</item>
				<item type="checkbox" property="AllowPlugins" state="on">
					<label lang="en" value="Allow plugins" />
				</item>
				<item type="checkbox" property="JavascriptCanOpenWindows" state="on">
					<label lang="en" value="Javascript programs can open new windows" />
				</item>
				<item type="checkbox" property="JavascriptCanAccessClipboard" state="on">
					<label lang="en" value="Javascript programs can access clipboard" />
				</item>
				<item type="checkbox" property="EnableWebGL" default="true">
					<label value="Enable WebGL" />
				</item>
				<item type="checkbox" property="EnableSmoothScrolling" default="true">
					<label value="Enable smooth scrolling" />
				</item>
				<item type="checkbox" property="DeveloperExtrasEnabled" state="off">
					<label lang="en" value="Developer extras" />
				</item>
			</groupbox>
		</tab>
		<tab>
			<label lang="en" value="Fonts" />
			<groupbox>
				<item type="customwidget" label="own" name="FontsSelector" />
			</groupbox>
			<groupbox>
				<label lang="en" value="Sizes" />
				<item type="spinbox" property="MinimumFontSize" default="9" minimum="5" maximum="40" step="1">
					<label lang="en" value="Minimum font size:" />
				</item>
				<item type="spinbox" property="DefaultFontSize" default="14" minimum="5" maximum="40" step="1">
					<label lang="en" value="Default font size:" />
				</item>
				<item type="spinbox" property="DefaultFixedFontSize" default="14" minimum="5" maximum="40" step="1">
					<label lang="en" value="Default fixed font size:" />
				</item>
			</groupbox>
		</tab>
		<tab>
			<label lang="en" value="Rendering" />
			<groupbox>
				<label lang="en" value="Rendering" />
				<item type="checkbox" property="PrimitivesAntialiasing" default="off">
					<label lang="en" value="Antialias primitives if possible" />
				</item>
				<item type="checkbox" property="TextAntialiasing" default="on">
					<label lang="en" value="Antialias text if possible" />
				</item>
				<item type="checkbox" property="SmoothPixmapTransform" default="on">
					<label lang="en" value="Smooth pixmap transform" />
				</item>
				<item type="checkbox" property="HighQualityAntialiasing" default="on">
					<label lang="en" value="High-quality antialiasing" />
				</item>
			</groupbox>
		</tab>
	</page>
</settings>
