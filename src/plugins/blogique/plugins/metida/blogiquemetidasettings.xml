<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label value="Behavior" />
		<groupbox>
			<label value="Inbox update settings" />
			<item type="checkbox" property="CheckingInboxEnabled" default="true">
				<label value="Enable messages checking" />
			</item>
			<item type="spinbox" property="UpdateInboxInterval" default="30" minimum="5" maximum="3600">
				<label value="Update interval:" />
				<suffix value=" s" />
			</item>
		</groupbox>
		<groupbox>
			<label value="Comments update settings" />
			<item type="checkbox" property="CheckingCommentsEnabled" default="true">
				<label value="Enable comments checking" />
			</item>
			<item type="spinbox" property="UpdateCommentsInterval" default="5" minimum="1" maximum="600">
				<label value="Update interval:" />
				<suffix value=" min" />
			</item>
			<item type="spinbox" property="RecentCommentsNumber" default="10" minimum="1" maximum="50">
				<label value="Number of recent comments to show:" />
			</item>
		</groupbox>
		<groupbox>
			<label value="Media settings" />
			<item type="checkbox" property="AutoUpdateCurrentMusic" default="false">
				<label value="Automatically fill information about current song" />
			</item>
		</groupbox>
		<groupbox>
			<label value="Like buttons" />
			<item type="checkbox" property="SaveSelectedButtons" default="true">
				<label value="Save selected like-buttons" />
			</item>
			<item type="combobox" property="LikeButtonPosition">
				<label lang="en" value="Like buttons position:" />
				<option name="top">
					<label value="At the top of the post" />
				</option>
				<option name="bottom" default="true">
					<label value="At the bottom of the post" />
				</option>
			</item>
		</groupbox>
	</page>
</settings>
