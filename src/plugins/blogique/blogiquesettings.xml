<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label value="Accounts" />
		<item type="customwidget" property="AccountsWidget" />
	</page>
	<page>
		<label value="Behavior" />
		<groupbox>
			<label lang="en" value="Local entries" />
			<item type="combobox" property="OpenDraftByDblClick" >
				<label lang="en" value="Open draft by double click in:" />
				<option name="CurrentTab" >
					<label lang="en" value="Current tab" />
				</option>
				<option name="NewTab" default="true" >
					<label lang="en" value="New tab" />
				</option>
			</item>
		</groupbox>
		<groupbox>
			<label lang="en" value="Remote posts" />
			<item type="combobox" property="OpenEntryByDblClick" >
				<label lang="en" value="Open entry by double click in:" />
				<option name="CurrentTab" >
					<label lang="en" value="Current tab" />
				</option>
				<option name="NewTab" default="true" >
					<label lang="en" value="New tab" />
				</option>
			</item>
		</groupbox>
		<groupbox>
			<label value="Comments update settings" />
			<item type="checkbox" property="CheckingCommentsEnabled" default="true">
				<label value="Enable comments checking" />
			</item>
			<item type="spinbox" property="UpdateCommentsInterval" default="5" minimum="1" maximum="600">
				<label value="Update interval:" />
				<suffix value=" min" />
			</item>
			<item type="spinbox" property="RecentCommentsNumber" default="10" minimum="1" maximum="500">
				<label value="Number of recent comments to show:" />
			</item>
		</groupbox>
		<groupbox>
			<label lang="en" value="Editor options" />
			<item type="spinbox" property="AutoSave" default="120" minimum="10" maximum="3600">
				<label value="Autosave interval:" />
				<suffix value=" s" />
			</item>
		</groupbox>
	</page>
</settings>
