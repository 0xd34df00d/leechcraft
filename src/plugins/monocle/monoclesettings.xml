<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label value="Monocle" />
		<tab>
			<label value="Appearance" />
			<item type="spinbox" property="RecentlyOpenedListSize" default="10" minimum="1" maximum="100">
				<label value="Maximum number of items in Recently Opened list:" />
			</item>
		</tab>
		<tab>
			<label value="Behaviour" />
			<item type="checkbox" property="InvertedPageNumLabel" default="true">
				<label value="Inverted page number label behaviour" />
			</item>
			<item type="checkbox" property="InhibitScreensaver" default="true">
				<label value="Inhibit screensaver while a Monocle tab is active" />
			</item>
		</tab>
		<tab>
			<label value="Performance" />
			<item type="spinbox" property="PixmapCacheSize" default="128" minimum="0" maximum="1024">
				<label value="Pixmap cache size:" />
				<suffix value=" MiB" />
			</item>
			<item type="checkbox" property="SmoothScrolling" default="true">
				<label value="Smooth scrolling" />
			</item>
		</tab>
		<tab>
			<label value="Default backends" />
			<item type="dataview" property="DefaultBackends" addEnabled="false">
				<label value="Default backends:" />
			</item>
		</tab>
	</page>
	<page>
		<label value="Text books" />
		<groupbox>
			<label value="Appearance" />
			<item type="font" property="DefaultFont">
				<label value="Default font:" />
			</item>
			<item type="spinbox" property="PageWidth" default="600" minimum="100" maximum="4000" step="10">
				<label value="Page width:" />
				<suffix value=" px" />
			</item>
			<item type="spinbox" property="PageHeight" default="800" minimum="100" maximum="6000" step="10">
				<label value="Page height:" />
				<suffix value=" px" />
			</item>
			<groupbox>
				<label value="Margins" />
				<item type="spinbox" property="LeftMargin" default="60" minimum="0" maximum="200">
					<label value="Left margin:" />
					<suffix value=" px" />
				</item>
				<item type="spinbox" property="TopMargin" default="80" minimum="0" maximum="200">
					<label value="Top margin:" />
					<suffix value=" px" />
				</item>
				<item type="spinbox" property="RightMargin" default="60" minimum="0" maximum="200">
					<label value="Right margin:" />
					<suffix value=" px" />
				</item>
				<item type="spinbox" property="BottomMargin" default="80" minimum="0" maximum="200">
					<label value="Bottom margin:" />
					<suffix value=" px" />
				</item>
			</groupbox>
		</groupbox>
	</page>
</settings>
