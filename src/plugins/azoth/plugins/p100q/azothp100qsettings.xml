<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label value="Azoth p100q" />
		<groupbox>
			<label value="p100q" />
			<item type="checkbox" property="ShowImage" state="off">
				<label value="Show images in psto's chat window" />
			</item>
			<item type="checkbox" property="ShowAvatars" state="on">
				<label value="Show avatars" />
			</item>
			<item type="checkbox" property="BindLastID" default="true">
				<label value="Bind Ctrl+Shift+P hotkey to insert last post ID" />
			</item>
			<item type="checkbox" property="AlwaysReplace" default="true">
				<label value="Always replace previous contents on action buttons" />
			</item>
			<label value="User actions" />
			<groupbox>
				<label value="User Actions" />
				<item type="checkbox" property="PrivateMessageButton" default="true">
					<label value="Private Message" />
				</item>
				<item type="checkbox" property="BlockButton" default="true">
					<label value="Block User" />
				</item>
			</groupbox>
			<groupbox>
				<label value="Psto Actions" />
				<item type="checkbox" property="SubscribeButton" default="true">
					<label value="Subscribe and Unsubscribe" />
				</item>
				<item type="checkbox" property="CommentsButton" default="true">
					<label value="Request Comments" />
				</item>
				<item type="checkbox" property="RecommendButton" default="true">
					<label value="Recommend this psto" />
				</item>
				<item type="checkbox" property="AddToBookmarkButton" default="true">
					<label value="Add to bookmarks" />
				</item>
			</groupbox>
		</groupbox>
	</page>
</settings>
