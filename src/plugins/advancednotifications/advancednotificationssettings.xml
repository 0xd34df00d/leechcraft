<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label value="Rules" />
		<item type="customwidget" property="RulesWidget" />
	</page>
	<page>
		<label value="Methods" />
		<tab>
			<label value="Audio" />
			<item type="checkbox" property="EnableAudioNots" default="true">
				<label value="Enable audio notifications" />
			</item>
			<item type="combobox" property="AudioTheme" mayHaveDataSource="true">
				<label value="Audio theme:" />
				<option name="oxygen" default="true">
					<label value="Oxygen" />
				</option>
			</item>
		</tab>
		<tab>
			<label value="System tray" />
			<groupbox>
				<label value="Counters" />
				<item type="checkbox" property="EnableCounter.org.LC.AdvNotifications.IM" default="true">
					<label value="Enable for IM events" />
				</item>
				<item type="checkbox" property="EnableCounter.org.LC.AdvNotifications.Organizer" default="true">
					<label value="Enable for Organizer events" />
				</item>
				<item type="checkbox" property="EnableCounter.org.LC.AdvNotifications.Downloads" default="true">
					<label value="Enable for Downloads events" />
				</item>
				<item type="checkbox" property="EnableCounter.org.LC.AdvNotifications.PackageManager" default="true">
					<label value="Enable for Package Manager events" />
				</item>
				<item type="checkbox" property="EnableCounter.org.LC.AdvNotifications.MediaPlayer" default="true">
					<label value="Enable for Media Player events" />
				</item>
				<item type="checkbox" property="EnableCounter.org.LC.AdvNotifications.Generic" default="true">
					<label value="Enable for Generic events" />
				</item>
			</groupbox>
			<groupbox>
				<label value="Behavior" />
				<item type="checkbox" property="HideOnHoverOut" default="true">
					<label value="Hide when mouse leaves the notifier" />
				</item>
			</groupbox>
		</tab>
	</page>
</settings>
