<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page label="General">
		<groupbox label="Charge levels">
			<item type="spinbox" property="LowPowerLevel" minimum="1" maximum="99" default="15" label="Low charge threshold:">
				<suffix value="%" translatable="false" />
			</item>
			<item type="spinbox" property="ExtremeLowPowerLevel" minimum="1" maximum="99" default="5" label="Extremely low charge threshold:">
				<suffix value="%" translatable="false" />
			</item>
		</groupbox>
		<groupbox label="Notifications">
			<item type="checkbox" property="NotifyOnPowerTransitions" default="true" label="Notify on power transitions" />
			<item type="checkbox" property="NotifyOnLowPower" default="true" label="Notify on low charge" />
			<item type="checkbox" property="NotifyOnExtremeLowPower" default="true" label="Notify on extremely low charge" />
		</groupbox>
	</page>
	<page label="Debug">
		<item type="pushbutton" property="TestSleep" label="Send sleep event to other plugins" />
		<item type="pushbutton" property="TestWake" label="Send wake up event to other plugins" />
	</page>
</settings>
