<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label lang="en" value="Local settings" />
		<groupbox>
			<label lang="en" value="Behavior" />
			<item type="checkbox" property="AlertAboutErrors" default="on">
				<label lang="en" value="Alert about errors" />
			</item>
		</groupbox>
	</page>
	<page>
		<label lang="en" value="Network settings" />
		<tab>
			<label lang="en" value="General" />
			<groupbox>
				<label lang="en" value="Behavior" />
				<item type="lineedit" property="TextTransferMode" default="txt cpp cxx c ui asm htm html css asp vbs js">
					<label lang="en" value="Use text transfer mode:" />
				</item>
			</groupbox>
		</tab>
		<tab>
			<label lang="en" value="Identification" />
			<groupbox>
				<label lang="en" value="HTTP" />
				<item type="lineedit" property="HTTPLogin" default="anonymous">
					<label lang="en" value="Login:" />
				</item>
				<item type="lineedit" property="HTTPPassword" default="simpleemail@leechcraft.org">
					<label lang="en" value="Password:" />
				</item>
				<item type="lineedit" property="UserUserAgent">
					<label lang="en" value="Custom user agent:" />
				</item>
				<item type="combobox" property="PredefinedUserAgent">
					<label lang="en" value="Predefined user agent:" />
					<option default="true" name="%leechcraft%">
						<label lang="en" value="LeechCraft" />
						<binary type="image" place="rcc">:/resources/images/leechcraft.svg</binary>
					</option>
					<option name="Mozilla/5.0 (X11; U; Linux i686; en-US; rv:1.9.0.1) Firefox/3.0.1">
						<label lang="en" value="Firefox 3.0.1 on Linux i686" />
						<binary type="image" place="share">cstp/clients/firefox</binary>
					</option>
					<option name="Mozilla/4.0 (Compatible; MSIE 7.0; Windows NT 5.1)">
						<label lang="en" value="Internet Explorer 6.0 on Windows XP" />
						<binary type="image" place="share">cstp/clients/ie7</binary>
					</option>
					<option name="Mozilla/4.0 (compatible; MSIE 7.0; Windows NT 6.0)">
						<label lang="en" value="Internet Explorer 7.0 on Windows Vista" />
						<binary type="image" place="share">cstp/clients/ie7</binary>
					</option>
					<option name="Mozilla/4.0 (compatible; MSIE 4.0; Windows 98)">
						<label lang="en" value="Internet Explorer 4.0 on Windows 98" />
						<binary type="image" place="share">cstp/clients/ie4</binary>
					</option>
					<option name="Mozilla/1.22 (compatible; MSIE 2.0; Windows 95)">
						<label lang="en" value="Internet Explorer 2.0 on Windows 95" />
						<binary type="image" place="share">cstp/clients/ie2</binary>
					</option>
					<option name="Mozilla/5.0 (compatible; Konqueror/4.0; Linux) KHTML/4.0.2 (like Gecko)">
						<label lang="en" value="Konqueror 4.0" />
						<binary type="image" place="share">cstp/clients/konqueror4</binary>
					</option>
					<option name="Mozilla/5.0 (X11; U; Linux i686; en-US; rv:1.8.1.16) Gecko/20080718 SeaMonkey/1.1.11">
						<label lang="en" value="SeaMonkey 1.1.11 on Linux i686" />
						<binary type="image" place="share">cstp/clients/seamonkey</binary>
					</option>
					<option name="Opera/9.52 (X11; Linux x86_64; U; en)">
						<label lang="en" value="Opera 9.52 on Linux x86_64" />
						<binary type="image" place="share">cstp/clients/opera</binary>
					</option>
					<option name="Wget/1.9.1">
						<label lang="en" value="Wget 1.9.1" />
						<binary type="image" place="share">cstp/clients/console</binary>
					</option>
					<option name="w3m/0.5.2">
						<label lang="en" value="w3m 0.5.2" />
						<binary type="image" place="share">cstp/clients/console</binary>
					</option>
					<option name="Lynx/2.8.7dev.4 libwww-FM/2.14 SSL-MM/1.4.1 OpenSSL/0.9.8d">
						<label lang="en" value="Lynx 2.8.7 with OpenSSL" />
						<binary type="image" place="share">cstp/clients/console</binary>
					</option>
				</item>
			</groupbox>
		</tab>
	</page>
</settings>
