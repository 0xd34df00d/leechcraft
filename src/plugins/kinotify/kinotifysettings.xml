<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label value="Kinotify" />
		<groupbox>
			<label value="Behavior" />
			<item type="checkbox" property="RespectFullscreen" default="true">
				<label value="Don't show notifications when there is a fullscreen application" />
			</item>
			<item type="checkbox" property="FollowMouse" default="true">
				<label value="Show notification on the screen containing the mouse" />
				<tooltip>If this option is disabled notifications are shown on the screen containing the LeechCraft window.</tooltip>
			</item>
			<item type="spinbox" property="MessageTimeout" default="5" minimum="1" maximum="30" step="1">
				<label value="Display timeout:" />
				<suffix value=" s" />
			</item>
			<item type="combobox" property="NotifyPosition">
				<label value="Notificator position:" />
				<option name="TopLeft">
					<label value="Top left" />
				</option>
				<option name="TopRight">
					<label value="Top right" />
				</option>
				<option name="BottomLeft">
					<label value="Bottom left" />
				</option>
				<option name="BottomRight" default="true">
					<label value="Bottom right" />
				</option>
			</item>
			<item type="pushbutton" property="TestNotification">
				<label value="Display an example notification" />
			</item>
		</groupbox>
	</page>
</settings>
